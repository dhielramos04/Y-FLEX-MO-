<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Camera Test</title>
</head>
<body style="display:flex;flex-direction:column;align-items:center;justify-content:center;padding:20px;font-family:sans-serif;">
<h1>Camera Test</h1>
<video id="video" autoplay playsinline muted width="640" height="480" style="border:2px solid green; border-radius:10px;"></video>

<script>
async function startCamera() {
  try {
    const stream = await navigator.mediaDevices.getUserMedia({ video: true });
    document.getElementById('video').srcObject = stream;
  } catch (e) {
    console.error("Camera error", e);
    alert("Camera access denied or not available.");
  }
}

// Start camera immediately
startCamera();
</script>
</body>
</html>
